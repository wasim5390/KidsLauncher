<?xml version="1.0" encoding="utf-8"?>
<com.uiu.kids.ui.slides.reminder.ReminderItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/container"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            app:layout_constraintGuide_percent=".25"
                />
    <android.support.constraint.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/dynamicConstraintView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/slideItemView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/slide_item_bg"
        app:layout_constraintDimensionRatio="H, 1.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/rem_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_time"
            />


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/rem_lable"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideItemView"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/helvetica_neue_roman"
        android:text="Reminder"
        />
    </android.support.constraint.ConstraintLayout>

</com.uiu.kids.ui.slides.reminder.ReminderItemView>