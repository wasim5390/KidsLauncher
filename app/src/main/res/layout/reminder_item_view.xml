<?xml version="1.0" encoding="utf-8"?>
<com.uiu.kids.ui.slides.reminder.ReminderItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rem_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/alarm_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H, 0.9"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rem_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/rem_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_serif"
            android:gravity="center"
            android:singleLine="true"
            android:text="Label"
            android:textColor="#333333"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/rem_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/droid_serif"
            android:gravity="center"
            android:singleLine="true"
            android:text="Go find one place"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/rem_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_serif"
            android:singleLine="true"
            android:text="12:00:00"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="visible"
            android:gravity="center"
            />
    </LinearLayout>


</com.uiu.kids.ui.slides.reminder.ReminderItemView>