<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.message.MessageActivity">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera"
        android:keepScreenOn="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cameraPlaySounds="true"
        app:cameraWhiteBalance="auto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_mode_switch"
        app:layout_constraintBottom_toBottomOf="@+id/camera_mode_switch"
        android:padding="15dp"
        android:tint="@color/white"
        />

    <ImageView
        android:id="@+id/camera_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_videocam"
        android:padding="15dp"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.uiu.kids.ui.Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/helvetica_neue_lt"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnView" />

    <FrameLayout
        android:id="@+id/btnView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        >
        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"

            android:visibility="visible"
            android:scaleType="centerInside"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/btnVideoCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_video_recrod"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:background="@null"
            />
    </FrameLayout>



    <ImageView
        android:id="@+id/btnFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnView"
        app:layout_constraintBottom_toBottomOf="@+id/btnView"
        app:srcCompat="@drawable/ic_flash_auto"
        android:padding="10dp"
        android:layout_marginEnd="50dp"
        />
    <ImageView
        android:id="@+id/btnFacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btnView"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@+id/btnView"
        app:srcCompat="@drawable/ic_switch_camera"
        android:padding="10dp"
        />


</android.support.constraint.ConstraintLayout>