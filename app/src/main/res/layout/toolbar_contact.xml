<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/header_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/toolbar_up_navigation_selector"
       android:fontFamily="@font/helvetica_neue_roman"
        android:textColor="@color/white"
        android:clickable="true"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:text="@string/header_button_back" />

    <Button
        android:id="@+id/header_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:background="@drawable/toolbar_right_btn_selector"
        android:textColor="@color/white"
        android:text="@string/header_button_new_contact"
        android:fontFamily="@font/helvetica_neue_roman"
        android:textSize="17sp"
        android:clickable="true" />



    <TextView
        android:id="@+id/toolbar_title"
        android:textColor="#f5f5f5"
        android:textSize="22sp"
        android:fontFamily="@font/helvetica_neue_lt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/header_btn_left"
        app:layout_constraintEnd_toStartOf="@+id/header_btn_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:clickable="false"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>