<?xml version="1.0" encoding="utf-8"?>
<com.uiu.kids.ui.slides.apps.FavoriteAppsItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/slideItemView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/slide_item_bg"
        app:layout_constraintDimensionRatio="H, 1.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/iv_iitem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"

            android:src="@mipmap/wiser_avatar"
            />

        <ImageView
            android:id="@+id/ivEggTimer"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_egg_timer"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="@+id/iv_iitem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:visibility="gone"
            />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_llable"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideItemView"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/helvetica_neue_roman"
        android:text="Add"
        />
</com.uiu.kids.ui.slides.apps.FavoriteAppsItemView>