<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_height="86.67dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="false"
                    android:text="@string/contact_list_header"
                    android:textColor="@color/instruction_tips"
                    android:textSize="22sp"
                    android:fontFamily="@font/droid_serif_italic"
                    />

                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/contact_name_detail"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_margin="16dp"

                    >
                    <TextView
                        android:id="@+id/tv_contact_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_grey"
                        android:textSize="24sp"
                        android:text="Name"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />


                    <TextView
                        android:id="@+id/tv_contact_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:textSize="18sp"

                        android:lineSpacingExtra="4.67dp"
                        android:text="Wasim amin"
                        android:visibility="visible"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />
                </LinearLayout>
                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>


                <LinearLayout
                    android:id="@+id/contact_picture_detail"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:id="@+id/tv_contact_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_grey"
                        android:textSize="24sp"
                        android:fontFamily="@font/helvetica_neue_roman"
                        android:text="Add picture"
                     />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_contact_picture"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="#ffffff"
                        android:visibility="visible"/>
                </LinearLayout>
                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/contact_mobile_detail"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_contact_mobile_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_grey"
                        android:textSize="24sp"
                        android:text="Edit mobile number"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />


                    <TextView
                        android:id="@+id/tv_contact_mobile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4.67dp"
                        android:text="0300-440-5390"
                        android:visibility="visible"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />
                </LinearLayout>
                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/contact_home_detail"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_contact_home_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_grey"
                        android:textSize="24sp"
                        android:text="Edit home number"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />


                    <TextView
                        android:id="@+id/tv_contact_home"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4.67dp"
                        android:text="03004405390"
                        android:visibility="visible"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />
                </LinearLayout>
                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/contact_email_detail"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_contact_email_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_grey"
                        android:textSize="24sp"
                        android:text="Edit email"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />


                    <TextView
                        android:id="@+id/tv_contact_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4.67dp"
                        android:text="Wasim amin"
                        android:visibility="visible"
                        android:fontFamily="@font/helvetica_neue_roman"
                        />
                </LinearLayout>
                <View
                    android:background="#b8b8b8"
                    android:layout_height="0.67dp"
                    android:layout_width="match_parent"/>


                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/flat_red_action_button_selector"
                        android:clickable="true"
                        android:text="@string/action_button_delete_contact"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/helvetica_neue_lt"
                        android:focusable="true" />




            </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>