<?xml version="1.0" encoding="utf-8"?>
<com.uiu.kids.ui.slides.safe_places.SafePlacesItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H, 0.9"
        app:civ_border_color="#000000"
        android:layout_margin="5dp"
        app:civ_border_width="2dp"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/tv_lable"
        android:textSize="26sp"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/iv_item"
        android:background="@color/white"
        android:singleLine="true"
        android:gravity="center"

        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:fontFamily="@font/droid_serif"
        android:text="Add"
        />
    <ImageView
        android:id="@+id/ivEggTimer"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_egg_timer"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@+id/tv_lable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lable"

        app:layout_constraintDimensionRatio="V, 1"
        android:visibility="gone"
        />

</com.uiu.kids.ui.slides.safe_places.SafePlacesItemView>